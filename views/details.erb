<h4>Post details:</h4>
<br />
<p>
  <%= @row['content'] %>
  <br />
  <br />
  Added at <%= @row['created_date'] %>
</p>
<br />
<h4>Comments:</h4>
<form action="/details/<%= @row['id'] %>" method="POST" role="form">
  <div class="form-floating">
    <textarea name="content" class="form-control" placeholder="Add your comment" id="floatingTextarea2" style="height: 200px"></textarea>
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Add comment</button>
</form>
